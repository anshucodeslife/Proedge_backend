							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"student1@proedge.com\",\n    \"password\": \"student123\",\n    \"fullName\": \"John Doe\",\n    \"role\": \"STUDENT\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/signup",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"signup"
							]
						},
						"description": "Register a new user. Role can be STUDENT, TUTOR, or ADMIN (defaults to STUDENT)"
					},
					"response": []
				},
